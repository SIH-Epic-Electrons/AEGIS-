{
  "expo": {
    "name": "AEGIS",
    "slug": "aegis-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#1a1a2e",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aegis.mobile",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.aegis.mobile",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "allowScreenshots": true,
      "allowScreenCapture": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow AEGIS to use your location for geo-fencing and hotspot predictions."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#e94560"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "97a9b107-49bb-4221-8f8d-006774172dc1"
      }
    }
  }
}
